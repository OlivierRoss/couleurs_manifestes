doctype html
html(lang="fr")
  head
    title Couleurs Manifestes
    meta(desc="Exposition permanente")
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    // Vue
    //script(src="https://cdn.jsdelivr.net/npm/vue@2.6.10/dist/vue.js") // Prod
    script(src="https://cdn.jsdelivr.net/npm/vue") // Dev
    block script

  body
    - var messages = getMessages()
    if messages.notify
      each msg in messages.notify
        .info= msg
    if messages.error
      each msg in messages.error
        .error= msg
    block content

